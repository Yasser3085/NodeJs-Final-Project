<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <style>
    body {
      background: linear-gradient(
        -45deg,
        rgba(119, 117, 117, 0),
        rgb(52, 68, 106),
        rgba(0, 0, 0, 0.239)
      );
      background-size: 400% 400%;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
        sans-serif;
      height: 100vh;
      width: 100%;
      animation: animate 15s ease infinite;
    }

    .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .form1 {
      background-color: #1e1e1e;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      color: white;
      margin: 150px 200px;
    }
    .user-box {
      position: relative;
    }

    .user-box input {
      width: 100%;
      padding: 10px 0;
      font-size: 16px;
      color: #fff;
      margin-bottom: 30px;
      border: none;
      border-bottom: 1px solid #fff;
      outline: none;
      background: transparent;
    }
    .user-box label {
      position: absolute;
      top: 0;
      left: 0;
      padding: 10px 0;
      font-size: 16px;
      color: #fff;
      pointer-events: none;
      -webkit-transition: 0.5s;
      transition: 0.5s;
    }

    .user-box input:focus ~ label,
    .user-box input:valid ~ label {
      top: -20px;
      left: 0;
      color: #fff;
      font-size: 12px;
    }

    @keyframes animate {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
  </style>
  <body>
    <%- include('navbar.ejs') %> <% if (typeof course == "undefined") { %>

    <div class="container my-5">
      <form class="form1 text-center" action="/ins/addnewcourse" method="post">
        <h1 class="my-4 text-center text-white">Add New Course</h1>
        <div class="user-box">
          <input required="" name="coursename" type="text" autocomplete="off" />
          <label>Course Name</label>
        </div>
        <div class="user-box">
          <input
            required=""
            name="coursenumber"
            type="text"
            autocomplete="off"
          />
          <label> Number of the Course</label>
        </div>
        <div class="user-box">
          <input
            required=""
            name="coursehours"
            type="text"
            autocomplete="off"
          />
          <label> Course Hours</label>
        </div>
        <div class="user-box">
          <input
            required=""
            name="courselevel"
            type="text"
            autocomplete="off"
          />
          <label> Course Level</label>
        </div>

        <button type="submit" class="btn btn-light text-center mt-3">
          Add
        </button>
      </form>
    </div>

    <% } else if( typeof course !== 'undefined') { %>

    <div class="container my-5">
      <form
        class="form1 text-center"
        action="/ins/editcourse/<%= course._id %>"
        method="post"
      >
        <h1 class="my-4 text-center text-white">Edit Course</h1>
        <div class="user-box">
          <input required="" name="coursename" type="text" autocomplete="off" />
          <label>Course Name</label>
        </div>
        <div class="user-box">
          <input
            required=""
            name="coursenumber"
            type="text"
            autocomplete="off"
          />
          <label> Number of the Course</label>
        </div>
        <div class="user-box">
          <input
            required=""
            name="coursehours"
            type="text"
            autocomplete="off"
          />
          <label> Course Hours</label>
        </div>
        <div class="user-box">
          <input
            required=""
            name="courselevel"
            type="text"
            autocomplete="off"
          />
          <label> Course Level</label>
        </div>

        <button type="submit" class="btn btn-light text-center mt-3">
          Update
        </button>
      </form>
    </div>
    <% } %>
  </body>
</html>
