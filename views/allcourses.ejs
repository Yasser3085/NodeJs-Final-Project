<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <style>
    body {
      background: linear-gradient(
        -45deg,
        rgba(119, 117, 117, 0),
        rgb(52, 68, 106),
        rgba(0, 0, 0, 0.239)
      );
      background-size: 400% 400%;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
        sans-serif;
      height: 100vh;
      width: 100%;
      animation: animate 15s ease infinite;
    }

    .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .form1 {
      background-color: #000000e3;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      color: white;
      margin: 200px 200px;
    }
    .user-box {
      position: relative;
    }

    .user-box input {
      width: 100%;
      padding: 10px 0;
      font-size: 16px;
      color: #fff;
      margin-bottom: 30px;
      border: none;
      border-bottom: 1px solid #fff;
      outline: none;
      background: transparent;
    }
    .user-box label {
      position: absolute;
      top: 0;
      left: 0;
      padding: 10px 0;
      font-size: 16px;
      color: #fff;
      pointer-events: none;
      -webkit-transition: 0.5s;
      transition: 0.5s;
    }

    .user-box input:focus ~ label,
    .user-box input:valid ~ label {
      top: -20px;
      left: 0;
      color: #fff;
      font-size: 12px;
    }

    @keyframes animate {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    /* ...existing styles... */

    /* ...existing styles... */

    .table-container {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      width: 100%; /* Adjust the width as desired */

      overflow-x: auto;
      border-radius: 15px;
      overflow: hidden;
      margin: 15% auto; /* Center the table horizontally and add margin */
      padding: 10px; /* Add padding to create space within the table container */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.705);
      background-color: #1e1e1e;
    }

    table {
      background-color: #000; /* Black color for the entire table */
      border-radius: 10px;
      width: 100%;
      height: 100%;
      font-size: 1.2em;
      border-collapse: separate;
      border-spacing: 0;

      margin-left: 10px;
      overflow-x: auto;
    }

    th {
      background-color: #1e1e1e; /* Darker shade of black for table headers */
      text-align: center;
      font-size: 20px;
      color: #fff; /* Text color for table headers */
      padding: 10px; /* Add padding to table headers */
      border-bottom: 1px solid #ffffffaa;
    }

    td {
      background-color: #1e1e1e; /* Black color for table data cells */
      text-align: center;
      color: white;
      font-size: smaller;
      transition: background-color 0.1s; /* Smooth transition for hover effect */
      padding: 20px; /* Add padding to table data cells */
    }

    tr:hover td {
      background-color: #2f2d2d; /* Lighter shade of black for all td elements in the hovered row */
      color: #fff; /* Text color on hover */
    }
    a {
      text-decoration: none;
    }
  </style>
  <body>
    <%- include('navbar.ejs') %>
    <div class="container">
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Course Name</th>
              <th scope="col">Course Number</th>
              <th scope="col">Hours</th>
              <th scope="col">Level</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% let count = 1 %> <% for (const c of courses) { %>
            <tr>
              <td><%= count %></td>
              <td><%=c.name.toUpperCase()%></td>
              <td><%= c.number%></td>
              <td><%= c.hours%></td>
              <td><%= c.level%></td>
              <td>
                <a class="text-primary" href="/ins/editcourse/<%= c._id %>">
                  Edit</a
                >
              </td>
              <td>
                <a class="text-danger" href="/ins/deletecourse/<%= c._id %>">
                  Delete</a
                >
              </td>
              <% count++ %>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
